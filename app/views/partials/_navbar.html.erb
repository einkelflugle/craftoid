<div class="contain-to-grid">
    <nav class="top-bar" data-topbar data-options="is_hover: false">
        <ul class="title-area">
            <li class="name">
                <h1><%= link_to "Robocraft", robots_path %></h1>
            </li>
             <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
            <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>

        <section class="top-bar-section">
            <ul class="left">
                <li class="has-dropdown">
                    <a href="#">Browse</a>
                    <ul class="dropdown">
                        <li><%= link_to "Robots", robots_path %></li>
                        <li><%= link_to "Competitions", competitions_path %></li>
                    </ul>
                </li>
                <% if signed_in? %>
                    <li class="has-dropdown">
                        <a href="#">Create</a>
                        <ul class="dropdown">
                            <li><%= link_to "Robot", new_robot_path %></li>
                            <li><%= link_to "Competition", new_competition_path %></li>
                            <% if admin? current_user %>
                                <li><%= link_to "Category", new_category_path %></li>
                                <li><%= link_to "Help topic", new_help_topic_path %></li>
                            <% end %>
                        </ul>
                    </li>
                <% end %>
            </ul>
            <ul class="right">
                <% if signed_in? %>
                    <li class="has-dropdown">
                        <%= link_to current_user.name, '#' %>
                        <ul class="dropdown">
                            <li><%= link_to "Profile", current_user %></li>
                            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                            <li><%= link_to "Sign out", signout_path, method: 'delete' %></li>
                        </ul>
                    </li>
                <% else %>
                    <li><%= link_to "Sign in", signin_path %></li>
                <% end %>
            </ul>
        </section>
    </nav>
</div>