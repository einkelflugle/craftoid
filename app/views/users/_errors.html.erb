<% if @user.errors.any? %>
	<div id="error_explanation">
		<div data-alert class="alert-box alert">
			The form contains <%= pluralize(@user.errors.count, "error") %>.
			<a href="#" class="close">&times;</a>
		</div>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>