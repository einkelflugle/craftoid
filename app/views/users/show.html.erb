<% provide :hero_title, @user.name %>

<div class="row body">
	<div class="large-12 columns">
		<h1>
			<%= gravatar_for @user %>
			<%= @username %>
		</h1>
		<p class="lead"><%= pluralize(@robots.count, "robot") %></p>
		<p class="lead"><%= pluralize(@user.num_entries, "entry") %></p>
		<%= link_to "View robots", robots_user_path(@user), class: "button" %>
		<%= link_to "View favorites", favorites_user_path(@user), class: "button" %>
		<%= link_to "Back", :back, class: "button secondary" %>

		<% if !@comments.blank? %>
			<h3><%= @username %>'s comments:</h3>
			<% @comments.each do |comment| %>
				<div class="body row">
					<div class="large-12 columns dark body">
						<p>"<%= comment.body %>"</p>
						<span>In response to <%= link_to comment.robot.name, comment.robot %>, <%= time_ago_in_words(comment.created_at) %> ago</span>
						<%= link_to "Delete", [comment.robot, comment], method: :delete, data: { confirm: "Are you sure?" }, class: "button alert tiny right" %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>