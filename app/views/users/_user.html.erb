<div class="item">
	<div class="row">
		<div class="large-6 columns">
			<h3>
				<%= gravatar_for user %>
				<%= link_to user.name, user %>
			</h3>
		</div>
		<div class="large-4 columns">
			<p><%= pluralize(user.robots.count, "robot") %></p>
			<p><%= pluralize(user.comments.count, "comment") %></p>
			<p><%= pluralize(user.entries.count, "entry") %></p>
		</div>
		<div class="large-2 columns">
			<% if admin?(current_user) && !current_user?(user) %>
				<%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: "button alert tiny right" %>
			<% end %>
		</div>
	</div>
</div>