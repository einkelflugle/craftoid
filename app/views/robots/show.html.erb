<div class="row body">
	<div class="large-12 columns">
		<%= image_tag @robot.screenshot_url, alt: @robot.name %>

		<h1>
			<span class="label tier"><%= link_to "T" + @robot.tier.name, tier_path(@robot.tier.name) %></span>
			<%= @robot.name %>
		</h1>
		<p><%= @robot.description %></p>
		<p>By <%= link_to @user.name, @user %></p>
		
		<% if current_user?(@user) || admin?(current_user) %>
			<%= link_to "Edit robot", edit_robot_path(@robot), class: "button" %>
			<%= link_to "Delete robot", @robot, method: :delete, data: { confirm: 'Are you sure?' }, class: "button secondary" %>
		<% end %>

		<h2>Similar robots:</h2>
	</div>
</div>

<%= render @similar_robots %>

<div class="row body">
	<div class="large-12 columns">
		<h2>Comments:</h2>
		<%= render @comments %>
	</div>
</div>

<div class="row body">
	<%= render 'comments/form' %>
</div>