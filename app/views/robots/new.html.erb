<%= form_for @robot do |f| %>

	<% if @robot.errors.any? %>
		<% @robot.errors.full_messages.each do |msg| %>
		<div data-alert class="alert-box alert">
			<%= msg %>
			<a href="#" class="close">&times;</a>
		</div>
		<% end %>
	<% end %>

	<h1>Create a robot</h1>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.label :tier_id %>
	<%= f.collection_select :tier_id, Tier.all, :id, :name, prompt: true %>

	<%= f.label :screenshot_url %>
	<%= f.text_field :screenshot_url %>

	<%= f.submit class: "button" %>
	<%= link_to "Back", robots_path, class: "button secondary" %>
<% end %>