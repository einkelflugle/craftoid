<div class="item">
	<div class="row">
		<div class="large-8 columns">
			<h2><%= link_to competition.name, competition %></h2>
			<p><%= linked_text_body competition.description, truncate: 200 %></p>
		</div>
		<div class="large-4 columns">
			<p><%= pluralize(competition.views, "view") %></p>
			<p><%= pluralize(competition.robots.count, "robot") %></p>
			<%= link_to_if(!competition.open?, "Closed", competition, class: "label") {} %>
		</div>
	</div>
</div>