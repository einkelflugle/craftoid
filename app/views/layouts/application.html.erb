<!DOCTYPE html>
<html>
	<%= render 'partials/head' %>
	<body>
		<%= render 'partials/navbar' %>

		<% if content_for? :hero_title %>
		<div class="hero">
			<div class="hero-inner small">
				<h1><%= yield :hero_title %></h1>
				<% if content_for? :hero_subtitle %>
					<h3 class="subheader"><%= yield :hero_subtitle %></h3>
				<% end %>
			</div>
		</div>
		<% end %>
		
		<% flash.each do |key, value| %>
		<div class="row body">
			<div class="large-12 columns">
				<div data-alert class="alert-box <%= key %>">
					<%= value %>
					<a href="#" class="close">&times;</a>
				</div>
			</div>
		</div>
		<% end %>

		<%= yield %>

		<%= render 'partials/footer' %>
		
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	</body>
</html>
