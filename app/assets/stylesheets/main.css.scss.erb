@import "foundation_and_overrides";
@import url("http://fonts.googleapis.com/css?family=Electrolize");

// Adjustments for 'Robot Tier' label styling
.label.tier {
	padding: 0.25rem 0.5rem;
	font-size: inherit;
	a {
		color: black;
	}
}

// Gives the main page wrapper a bit of extra top padding
.row.body {
	padding-top: 1.25rem;
}

// Top bar branding section
.top-bar .name h1 a {
	color: $primary-color;
}

// Multi-select input fix for Foundation
select[multiple] {
	height: auto;
}
